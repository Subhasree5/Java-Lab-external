import java.util.Scanner;
class Demo{
    int a,b;
    int sum(int a,int b){
        return a+b;
    }
}
public class Main{
    public static void main(String[]args){
        Scanner sc=new Scanner(System.in);
        System.out.print("Enter a= ");
        int a=sc.nextInt();
        System.out.print("Enter b= ");
        int b=sc.nextInt();
        Demo obj=new Demo();
        System.out.println("Addition of 2 numbers= "+obj.sum(a,b));
    }
}
Enter a= 5
Enter b= 6
Addition of 2 numbers= 11
