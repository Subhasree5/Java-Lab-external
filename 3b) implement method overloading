import java.util.Scanner;
class Calculation{
    int a,b,c;
    int sum(int a,int b){
        return a+b;
    }
    int sum(int a,int b,int c){
        return a+b+c;
    }
}
public class Main{
   public static void main(String[]args){
       Scanner sc=new Scanner(System.in);
       System.out.print("Enter a= ");
       int a=sc.nextInt();
       System.out.print("Enter b= ");
       int b=sc.nextInt();
       System.out.print("Enter c= ");
       int c=sc.nextInt();
       Calculation obj=new Calculation();
       System.out.println("Addition of 2 numbers= "+obj.sum(a,b));
       System.out.println("Addition of 3 numbers= "+obj.sum(a,b,c));
   } 
}
Enter a= 10
Enter b= 20
Enter c= 30
Addition of 2 numbers= 30
Addition of 3 numbers= 60
